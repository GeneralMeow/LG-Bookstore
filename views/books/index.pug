extends ../layout

block content
  .clearfix
    if page > 1
      a(href="/?page="+(page-1)) Previous
    a.pull-right(href="/?page="+(page+1)) Next

  .row
    .col-md-3
      .well
        form
          .form-group
            label Search
            input(type='text' name='search' placeholder='Author or Title')

          .form-group
            label Genres

          each genre in genres
            .form-group
              label
                input(type='checkbox' name='genres[]' value=genre.id)
                span= genre.name

          button(type='submit') Search
    .col-md-9
      table
        thead
          tr
            th Title
            th Authors
            th Genres
        tbody
          for book in books
            tr
              td
                a(href="/books/"+book.id)= book.title
              td
                for author in book.authors
                  =author.name
                  span &nbsp;
              td
                for genre in book.genres
                  =genre.name
                  span &nbsp;
    .clearfix
      if page > 1
        a(href="/?page="+(page-1)) Previous
      a.pull-right(href="/?page="+(page+1)) Next

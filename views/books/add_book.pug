extends ../layout

block content
  h1 Add Book

  form(action='/books', method='post')
    .form-group
      label(for='title') Title
      br
      input(name='title', type='text')

    .form-group
      label(for='published') Published
      br
      input(name='published', type='text')

    .form-group
      label(for='thumbnail') Thumbnail URL
      br
      input(name='thumbnail', type='text')

    .form-group
      label(for='description') Description
      br
      textarea(name='description')

    .form-group
      label(for='author_id') Author
        select(name='author_id')
          each author in authors
            option(value=author.id, label=author.name)

    .form-group
      label(for='genre_id') Genre
        select(name='genre_id')
          each genre in genres
            option(value=genre.id, label=genre.name)

    .form-group
      button.btn.btn-info(type='submit') Add Book
